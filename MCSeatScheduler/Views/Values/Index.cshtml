@model MCSeatScheduler.Model.ClearingOpenSeats
@{
	ViewData["Title"] = "Home Page";
}



<!doctype html>
<html lang="en">
<head>

	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

	<title>Mastercard Seat Scheduler</title>
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
				<div class="card card-signin my-5">
					<div class="card-body">
						<h3 class="card-title text-center">Mastercard Seat Scheduler</h3>
						<br />
						<form class="form-schedule">
							<div class="form-label-group">
								<label>
									@Html.DisplayNameFor(model => model.EmployeeId)
								</label>
								<input type="EmployeeID" id="EmployeeID" class="form-control" placeholder="EmployeeID" required autofocus>
								<br />
							</div>

							<div class="form-label-group">
								<label>
									@Html.DisplayNameFor(model => model.Date)
								</label>
								<input type="Date" id="Date" class="form-control" placeholder="Date" required>
								<br />
							</div>

							<button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Reserve</button>
							<br />
							<div class="container body-content">
								<hr />
								<footer>
									<p>&copy; 2018 - Mastercard Seat Scheduler</p>
								</footer>
							</div>


						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

</body>



</html>


