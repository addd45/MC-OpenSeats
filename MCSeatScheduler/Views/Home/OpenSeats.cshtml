@model IEnumerable<MCSeatScheduler.Model.OpenSeats>
@{const int MAX_SEATS = 10;}

<!doctype html>
<html lang="en">
<head>

	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

	<title>@ViewBag.Title</title>
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
				<div class="card card-signin my-5">
					<div class="card-body">
						<h3 class="card-title text-center">Mastercard Seat Scheduler</h3>
						<br />
						<table class="table">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Seat Number</th>
									<th scope="col">Employee ID</th>
									<th scope="col">Action</th>
								</tr>
							</thead>

							<tbody>
                                @{int openSeats = MAX_SEATS - Model.Count();
								  foreach (var item in Model)
                                    {
									<tr>
										<td>
											<span>@item.EmployeeId</span>
										</td>
										<td>
											@Html.ActionLink("Delete", "Delete", "Home", new { date = item.Date, eid = item.EmployeeId })
										</td>
									</tr>
                                }
                                for (int i = 0; i < openSeats; i++) {
                                        <tr>
                                            <td>Available</td>
                                            <td>@Html.ActionLink("Reserve", "Reserve", "Home" ) </td>
                                        </tr>
                                    }
                                 }
							</tbody>
						</table>


					</div>
				</div>
			</div>
		</div>
	</div>

</body>



</html>















